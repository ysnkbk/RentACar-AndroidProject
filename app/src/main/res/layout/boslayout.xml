    <?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/bckground">

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_baseline_search_24"
        android:hint="Searh a car"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/mercedesamblem"
        android:layout_width="89dp"
        android:layout_height="99dp"
        android:layout_below="@id/searchBar"
        android:src="@drawable/mercedes"
        android:layout_margin="20dp"/>

    <ImageView
        android:layout_width="89dp"
        android:layout_height="99dp"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        android:src="@drawable/bmw" />

    <ImageView
        android:layout_width="89dp"
        android:layout_height="99dp"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="310dp"
        android:src="@drawable/mercedes" />
    <TextView
        android:id="@+id/Allcarstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mercedesamblem"
        android:text="All Cars"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:drawableRight="@drawable/ic_baseline_send_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Allcarstext"
        android:layout_marginTop="20dp" />




</RelativeLayout>